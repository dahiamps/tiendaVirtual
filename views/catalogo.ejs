<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>catalogo</title>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/public/css/cardsstyles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                        <use xlink:href="#bootstrap" />
                    </svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 link-dark">Home</a></li>
                    <li><a href="catalogo" class="nav-link px-2 link-dark ">Catalogo</a></li>
                    <li><a href="contacto" class="nav-link px-2 link-dark">Contacto</a></li>
                    <!-- <li><a href="" class="nav-link px-2 link-dark">Products</a></li> -->
                </ul>

                <!-- <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                    </form> -->
                <form class="d-flex">
                    <% if (login) { %>

                        <div class="dropdown text-end">
                            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle"
                                id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <h6>Bienvenido: <strong>
                                        <%= name %>
                                    </strong></h6>
                                <!-- <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle"> -->
                            </a>
                            <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                                <li><a class="dropdown-item" href="products">Productos</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="infoContactos">info Contactos</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a href="logout" class="btn ">Salir</a></li>
                            </ul>
                        </div>
                        <!-- <a href="logout" class="btn btn-danger">logout</a> -->

                        <div class="container col-6">
                            <%} else { %>

                                <a href="login" class="btn btn-success">Login</a>
                                <% } %>



                </form>
            </div>
        </div>
    </header>
        <br>

        <div class="container">

            <br>

            <div class="row">
                <% results.forEach((products)=> { %>

                    <div class="card mx-5 my-4" style="width: 21rem;">
                        <img src="<%= products.img %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h4>
                                <strong>
                                    <%= products.name %>
                                </strong>
                            </h4>
                            <p class="card-text">
                                <%= products.description %>
                            </p>
                            <h6>Disponibles: <%= products.stock %>
                            </h6>
                            <h6>$ <%= products.value %>
                            </h6>



                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>

                    </div>

                    <td>

                    </td>
                    <td>

                    </td>
                    <td>

                    </td>
                    <td>

                    </td>





                    <% })%>
            </div>




        </div>






        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>


</body>

</html>