    <div class="container">
        <a href="/" class="btn btn-outline-primary"><i class='bx bxs-home bx-md'></i></a>
        <a href="/create" class="btn btn-outline-primary"><i class='bx bxs-plus-circle bx-md'></i></a>
        
        <table class="table table bordered table-striped tex-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">PRODUCTO</th>
                    <th scope="col">DESCRIPCION</th>
                    <th scope="col">VALOR</th>
                    <th scope="col">STOCK</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((products)=> { %>
                
                <tr>
                    <td><%= products.id %></td>
                    <td><%= products.name %></td>
                    <td><%= products.description %></td>
                    <td><%= products.value %></td>
                    <td><%= products.stock %></td>
                    <td>
                        <a href="/edit/<%= products.id %>" class="btn btn-outline-info"><i class='bx bxs-edit-alt'></i></a>
                        <a href="/delete/<%= products.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash'></i></a>
                    </td>
                    
                </tr>
               <% })%>
            </tbody>
        </table>
    </div>


    


    
