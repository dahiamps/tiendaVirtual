    <div class="container">
        <a href="/" class="btn btn-outline-primary"><i class='bx bxs-home bx-md'></i></a>
        

        <table class="table table bordered table-striped tex-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">TELEFONO</th>
                    <th scope="col">CORREO</th>
                    <th scope="col">ASUNTO</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((contacto)=> { %>

                    <tr>
                        <td>
                            <%= contacto.id %>
                        </td>
                        <td>
                            <%= contacto.name %>
                        </td>
                        <td>
                            <%= contacto.telefono %>
                        </td>
                        <td>
                            <%= contacto.correo%>
                        </td>
                        <td>
                            <%= contacto.asunto %>
                        </td>

                        

                        <td>
                            
                            <a href="/deleteContacto/<%= contacto.id %>" class="btn btn-outline-danger"><i
                                    class='bx bxs-trash'></i></a>
                        </td>

                    </tr>
                    <% })%>
            </tbody>
        </table>
    </div>






